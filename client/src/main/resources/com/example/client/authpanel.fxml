<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="250.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.AuthController">
   <children>
      <VBox alignment="CENTER" prefHeight="250.0" prefWidth="600.0">
         <Label alignment="CENTER" contentDisplay="CENTER" text="Welcome on home cloud service. Please Authorize" textAlignment="CENTER">
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin>
         </Label>

            <TextField prefHeight="50.0" prefWidth="550.0" promptText="Your login">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" top="25.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </TextField>
            <TextField prefHeight="50.0" prefWidth="550.0" promptText="Your password">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" top="25.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </TextField>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="600.0">
                  <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0" text="Login">
                     <HBox.margin>
                        <Insets right="25.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0" text="Registration" />
            </HBox>
         </VBox>
   </children>
</AnchorPane>
